{
  "properties": {
	"name": "MongoDB",
	"icon": "icons/mongodb.png",
	"id": "mongodb"
  },
  "configOptions": {
	"pdkExpansion": [
	  "master-slave-merge"
	],
	"connection": {
	  "type": "object",
	  "properties": {
        "isUri": {
          "type": "boolean",
          "title": "Connection mode",
          "default": true,
          "enum": [
            {
              "label": "URI mode",
              "value": true
            },
            {
              "label": "Standard mode",
              "value": false
            }
          ],
          "x-decorator": "FormItem",
          "x-component": "Radio.Group",
          "x-component-props": {
            "optionType": "button"
          },
          "x-reactions": [
            {
              "target": "*(host,database,user,password)",
              "fulfill": {
                "state": {
                  "visible": "{{$self.value===false}}"
                }
              }
            },
            {
              "target": "uri",
              "fulfill": {
                "state": {
                  "visible": "{{$self.value!==false}}"
                }
              }
            }
          ]
        },
        "uri": {
		  "type": "string",
		  "title": "ConnectionUri",
		  "x-decorator": "FormItem",
		  "x-component": "Input",
		  "apiServerKey": "database_uri"
		},
        "host": {
          "required": true,
          "type": "string",
          "title": "DB Host",
          "x-decorator": "FormItem",
          "x-component": "Input",
          "x-component-props": {
            "placeholder": "Database Host(127.0.0.1/Domain:{Port},Please use multiple addresses , separate)"
          }
        },
        "database": {
          "required": true,
          "type": "string",
          "title": "DB Name",
          "x-decorator": "FormItem",
          "x-component": "Input"
        },
        "user": {
          "type": "string",
          "title": "Username",
          "x-decorator": "FormItem",
          "x-component": "Input"
        },
        "password": {
          "type": "string",
          "title": "Password",
          "x-decorator": "FormItem",
          "x-component": "Password"
        },
        "additionalString": {
          "type": "string",
          "title": "Connection String Params",
          "x-decorator": "FormItem",
          "x-component": "Input"
        },
        "ssl": {
          "type": "boolean",
          "title": "Use TLS/SSL Connection",
          "default": false,
          "enum": [
            {
              "label": "Connect directly",
              "value": false
            },
            {
              "label": "Connect via TLS/SSL tunnel",
              "value": true
            }
          ],
          "x-decorator": "FormItem",
          "x-component": "Radio.Group",
          "x-component-props": {
            "optionType": "button"
          },
          "x-reactions": [
            {
              "target": "*(sslKey,sslPass,sslValidate)",
              "fulfill": {
                "state": {
                  "visible": "{{$self.value===true}}"
                }
              }
            }
          ]
        },
        "sslKey": {
          "type": "string",
          "title": "Private Key",
          "x-decorator": "FormItem",
          "x-component": "TextFileReader"
        },
        "sslPass": {
          "type": "string",
          "title": "Private Key Password",
          "x-decorator": "FormItem",
          "x-component": "Input"
        },
        "sslValidate": {
          "type": "boolean",
          "title": "Validate Server Certificate",
          "x-decorator": "FormItem",
          "x-component": "Switch",
          "x-reactions": [{
            "target": "sslCA",
            "fulfill": {
              "state": {
                "visible": "{{$self.value===true}}"
              }
            }
          }]
        }
	  }
	}
  },
	"messages": {
		"default": "en-US",
		"en-US": {
			"uri": "ConnectionUri"
		},
		"zh-CN": {
			"uri": "地址"
		},
		"zh-TW": {
			"uri": "地址"
		}
	},
  "dataTypes": {
	"DOUBLE": {
	  "to": "TapNumber",
	  "bit": 64,
	  "value": [
		-9223372036854775808,
		9223372036854775807
	  ],
	  "scale": 17,
	  "precision": 309

	},
	"STRING": {
	  "to": "TapString",
	  "preferByte": "1m",
	  "byte": "16m"
	},
	"DOCUMENT": {
	  "to": "TapMap",
	  "byte": "16m"
	},
	"ARRAY": {
	  "to": "TapArray",
	  "byte": "16m"
	},
	"BINARY": {
	  "to": "TapBinary",
	  "byte": "16m"
	},
	"OBJECT_ID": {
	  "to": "TapString",
	  "byte": "24",
	  "queryOnly": true
	},
	"BOOLEAN": {
	  "to": "TapBoolean"
	},
	"DATE_TIME": {
	  "to": "TapDateTime",
	  "range": [
		"1000-01-01T00:00:00.001Z",
		"9999-12-31T23:59:59.999Z"
	  ],
	  "pattern": "yyyy-MM-dd'T'HH:mm:ss.SSS'Z'",
	  "fraction": [
		0,
		3
	  ],
	  "defaultFraction": 0
	},
	"JAVASCRIPT": {
	  "to": "TapString",
	  "byte": "16m",
	  "queryOnly": true
	},
	"SYMBOL": {
	  "to": "TapString",
	  "byte": "16m",
	  "queryOnly": true
	},
	"INT32": {
	  "to": "TapNumber",
	  "bit": 32,
	  "precision": 10,
	  "value": [
		-2147483648,
		2147483647
	  ]
	},
	"TIMESTAMP": {
	  "to": "TapString",
	  "queryOnly": true
	},
	"INT64": {
	  "to": "TapNumber",
	  "bit": 64,
	  "value": [
		-9223372036854775808,
		9223372036854775807
	  ]
	},
	"DECIMAL128": {
	  "to": "TapNumber",
	  "value": [
		  -1E+6145,
		  1E+6145
	  ],
	  "scale": 1000
	},
	"MIN_KEY": {
	  "to": "TapString",
	  "byte": "16m",
	  "queryOnly": true
	},
	"MAX_KEY": {
	  "to": "TapString",
	  "byte": "16m",
	  "queryOnly": true
	},
	"NULL": {
	  "to": "TapRaw"
	}
  }
}
